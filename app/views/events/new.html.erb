<h1>New event</h1>

<%= form_for @event do |f| %>

<div>
  <%= f.label :title %> <br>
  <%= f.text_field :title %>
</div>

<div>
  <%= f.label :description %> <br>
  <%= f.text_area :description %>
</div>

<div>
  <%= f.label :date %> <br>
  <%= f.date_field :date %>
</div>
  
  <%= f.submit %>
<% end %>